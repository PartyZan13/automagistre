{% extends 'easy_admin/default/layout.html.twig' %}

{% block content_title %}Наличие{% endblock %}

{% block main %}
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>Наименование</th>
                <th>Цена</th>
                <th>Количество</th>
            </tr>
            </thead>
            <tbody>
            {% for part in parts %}
                {# @var part \App\Part\Entity\Part #}
                <tr>
                    <td>
                        {% include 'easy_admin/field_part.html.twig' with {'value': part} %}
                    </td>
                    <td>{{ part_price(part.id)|localize_money }}</td>
                    <td>{{ attribute(quantities, part.id.toString).quantity / 100 }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
